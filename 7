#include <stdio.h>

int main()
{
    int arr[50], n, i, max;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    max = arr[0];  // Assume first element is the largest

    for(i = 1; i < n; i++)
    {
        if(arr[i] > max)
        {
            max = arr[i];   // Update max if current element is larger
        }
    }

    printf("Largest element in the array is: %d\n", max);

    return 0;
}
